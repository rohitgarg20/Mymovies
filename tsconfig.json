{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "artifacts",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "types": [
      "react",
      "react-native",
      "jest"
    ],
    "skipLibCheck": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "android",
    "ios",
    "build",
    "node_modules"
  ],
  "compileOnSave": false
}
